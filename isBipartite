def isBipartite(graph):
    n = len(graph)
    colors = {node: 0 for node in graph}

    def dfs(node, color):
        colors[node] = color
        for neighbor in graph[node]:
            if colors[neighbor] == 0:
                if not dfs(neighbor, -color):
                    return False
            elif colors[neighbor] == colors[node]:
                return False
        return True
    for vertex in graph:
        if colors[vertex] == 0:
            if not dfs(vertex, 1):
                return False
    return True
graph_ok = {1: [2, 4], 2: [1, 3], 3: [2, 4], 4: [3, 1]}
print(isBipartite(graph_ok))
